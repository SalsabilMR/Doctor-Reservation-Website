@model DoctorReservation.Models.Doctor
@{
    ViewData["Title"] = "Add Doctor";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center mb-4 mt-4">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 450px;">
        <h2 class="text-center mb-4">Personal Data</h2>
        <p>You must enter personal data to complete registration</p>

<form asp-action="Create" method="post" enctype="multipart/form-data">
<input type="hidden" asp-for="ApplicationUserId" value="@ViewBag.UserId" />

    <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group ccol-12" data-aos="fade-up">
                <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

            <div class="form-group col-12" data-aos="fade-up">
                <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

            <div class="form-group col-12" data-aos="fade-up">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

            <div class="form-group col-12" data-aos="fade-up">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

            <div class="form-group col-12" data-aos="fade-up">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

            <div class="form-group col-12" data-aos="fade-up">
        <label asp-for="Mobile"></label>
        <input asp-for="Mobile" class="form-control" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>

            <div class="form-group col-12" data-aos="fade-up">
        <label asp-for="Fees"></label>
        <input asp-for="Fees" class="form-control" />
        <span asp-validation-for="Fees" class="text-danger"></span>
    </div>

            <div class="form-group col-12" data-aos="fade-up">
        <label asp-for="specialization"></label>
        <input asp-for="specialization" class="form-control" />
        <span asp-validation-for="specialization" class="text-danger"></span>
    </div>

            <div class="form-group col-12">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

            <div class="form-group col-12" data-aos="fade-up">
        <label asp-for="Certificate"></label>
        <input asp-for="Certificate" type="file" class="form-control" />
        <span asp-validation-for="Certificate" class="text-danger"></span>
    </div>

            <div class="form-group col-12" data-aos="fade-up">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>


            <button type="submit" class="btn btn-primary mt-2 col-12" data-aos="fade-up">Save</button>
</form>
</<div>
</div>
