
@* @model DoctorDashboardViewModel *@
@{
    ViewBag.Title = "ndex";
     Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center align-items-center">
        <div class="row">
            <!-- جدول المواعيد -->
            <div class="col-md-12">
                <div class="card shadow-lg mb-4">
                    <div class="card-header bg-secondery text-white">
                        <h4>Available Appointments</h4>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Availability</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>April 30, 2025</td>
                                    <td>10:00 AM</td>
                                    <td>Available</td>
                                </tr>
                                <tr>
                                    <td>April 30, 2025</td>
                                    <td>2:00 PM</td>
                                    <td>Available</td>
                                </tr>
                                <tr>
                                    <td>May 1, 2025</td>
                                    <td>9:00 AM</td>
                                    <td>Booked</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- الآراء والتقييمات -->
                <div class="card shadow-lg mb-3">
                <div class="card-header bg-warning text-light ">
                        <h4>Patient Reviews</h4>
                    </div>
                    <div class="card-body">
                        <div class="review">
                            <h5>John Smith</h5>
                            <p class="text-muted">April 28, 2025</p>
                            <p>Great experience! Dr. John is very professional and friendly.</p>
                            <div class="rating">
                                <span class="badge bg-warning text-dark">4.5/5</span>
                            </div>
                        </div>
                        <div class="review mt-3">
                            <h5>Emma Williams</h5>
                            <p class="text-muted">April 25, 2025</p>
                            <p>Highly recommend! He explained everything in detail and made me feel comfortable.</p>
                            <div class="rating">
                                <span class="badge bg-warning text-dark">5/5</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

