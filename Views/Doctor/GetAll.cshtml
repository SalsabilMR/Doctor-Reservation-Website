@model List<Doctor>
@{
    ViewData["Title"] = "GetAll";
 }

<section id="doctors" class="doctors section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Our Doctors</h2>
        <p>
            We are proud to have a team of experienced and highly qualified doctors from various specialties.
            Each doctor is dedicated to providing the highest level of care,
            with a focus on patient comfort and accurate diagnosis. 
            Whether you are looking for a general practitioner or 
            a specialized consultant, you’ll find trusted experts ready
            to support your health and well-being.

        </p>
    </div><!-- End Section Title -->
    <div class="container">

        <div class="row gy-4">
    @foreach(var doctor in Model)
{
    

            <div class="col-lg-6" data-aos="fade-up" >
                <div class="team-member d-flex align-items-start">
                        <div class="pic"><img src="@Url.Content("~/" + @doctor.ImagePath)" alt="Doctor Image" width="200" class="img-fluid" ></div>
                    <div class="member-info">
                            <h4>@doctor.FirstName  @doctor.LastName</h4>
                            <span>@doctor.specialization</span>
                            <p>@doctor.Description</p>
                            <p>@doctor.Fees</p>
                        <div class="social"> <i class="bi bi-geo-alt-fill">  @doctor.City | @doctor.Location</i></div>
                        <div class="social"><i class="bi bi-envelope-at-fill">  @doctor.Email</i></div>
                        <div class="social"> <i class="bi bi-phone-fill">  @doctor.Mobile</i></div>

                    </div>
                </div>
            </div><!-- End Team Member -->

       
}
        </div>

    </div>

<!-- Doctors Section -->


</section><!-- /Doctors Section -->
