
@using static DoctorReservation.Models.Patient
@model Patient
@{
    ViewData["Title"] = "Add Personal data";
}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 450px;" data-aos="fade-up">
        <h2 class="text-center mb-4">Personal Data</h2>
        <p>You must enter personal data to complete registration</p>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="ApplicationUserId" value="@ViewBag.UserId" />

    <div class="form-group  col-12" >
                <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-12" >
                <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

            <div class="form-group col-12" >
        <label asp-for="_Gender" class="control-label">Gender</label>
        <select asp-for="_Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
        <span asp-validation-for="_Gender" class="text-danger"></span>
    </div>

            <div class="form-group col-12" >
        <label asp-for="BirthOfDate">Birth of Date</label>
        <input asp-for="BirthOfDate" class="form-control" type="date" />
        <span asp-validation-for="BirthOfDate" class="text-danger"></span>
    </div>

            <div class="form-group col-12" >
        <label asp-for="Mobile"></label>
        <input asp-for="Mobile" class="form-control" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>

            <button type="submit" class="btn btn-primary mt-2 col-12" >Save</button>
</form>
</div>
</div>
