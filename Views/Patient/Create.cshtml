
@using static DoctorReservation.Models.Patient
@model Patient
@{
    ViewData["Title"] = "Add Patient";
}

<h2>Add Patient</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group col-lg-4 col-md-6" data-aos="fade-up">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-lg-4 col-md-6" data-aos="fade-up">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-4 col-md-6">
        <label asp-for="_Gender" class="control-label">Gender</label>
        <select asp-for="_Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
        <span asp-validation-for="_Gender" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-4 col-md-6">
        <label asp-for="BirthOfDate">Birth of Date</label>
        <input asp-for="BirthOfDate" class="form-control" type="date" />
        <span asp-validation-for="BirthOfDate" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-4 col-md-6">
        <label asp-for="Mobile"></label>
        <input asp-for="Mobile" class="form-control" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

